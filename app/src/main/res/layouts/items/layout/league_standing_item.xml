<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="10dp">

  <TextView
    android:id="@+id/tvClubStanding"
    android:layout_width="40dp"
    android:layout_height="wrap_content"
    android:textAlignment="center"
    tools:text="3."
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <TextView
    android:id="@+id/tvName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    tools:text="SK Slavia Praha"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@+id/tvClubStanding"
    app:layout_constraintTop_toTopOf="parent"/>

  <TextView
    android:id="@+id/tvClubPlayedMatches"
    android:layout_width="40dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:textAlignment="center"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/tvClubScore"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="23"/>

  <TextView
    android:id="@+id/tvClubScore"
    android:layout_width="60dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:textAlignment="center"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/tvClubPoints"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="42:28"/>

  <TextView
    android:id="@+id/tvClubPoints"
    android:layout_width="40dp"
    android:layout_height="wrap_content"
    android:textAlignment="center"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="32"/>
</androidx.constraintlayout.widget.ConstraintLayout>